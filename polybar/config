[module/mic-muter]
type = custom/ipc
hook-0 = amixer set Capture nocap; echo " M "
hook-1 = amixer set Capture cap; echo " A "
initial = 1
click-left = polybar-msg -p %pid% hook mic-muter 1
click-right = polybar-msg -p %pid% hook mic-muter 2

